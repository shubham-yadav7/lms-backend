                                            <i class="feather icon-book-open"></i>
                                            <div class="media-body">
                                                <h5>My Courses</h5>
                                                <p>112</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- End col -->
                        <!-- Start col -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="card m-b-20">
                                <div class="card-body">
                                    <div class="ecom-dashboard-widget">
                                        <div class="media">
                                            <i class="feather icon-layers"></i>
                                            <div class="media-body">
                                                <h5>My Bundles</h5>
