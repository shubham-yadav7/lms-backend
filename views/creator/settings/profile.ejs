                            </div>
                        </div>
                        <!-- End col -->
                        <!-- Start col -->
                        <div class="col-sm-6 col-xl-3">
                            <div class="card m-b-20">
                                <div class="card-body">
                                    <div class="ecom-dashboard-widget">
                                        <div class="media">
                                            <i class="feather icon-archive"></i>
                                            <div class="media-body">
                                                <h5>My Products</h5>
                                                <p>4</p>
                                            </div>
                                        </div>
                                    </div>
