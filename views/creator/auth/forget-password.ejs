<%- include('../partials/min-header') %>
<body>
  <div
    id="containerbar"
    class="containerbar authenticate-bg d-flex justify-content-center align-items-center"
    style="
      background-image: url(https://themesbox.in/admin-templates/theta/html/light-vertical/assets/images/authentication/authentication-bg.svg);
    "
  >
    <!-- Start Container -->
    <div class="container">
      <div class="auth-box register-box">
        <div class="card">
          <div class="card-body">
            <!-- Start row -->
            <div
              class="row no-gutters align-items-center justify-content-center"
            >
              <!-- Start col -->
              <div class="col-md-6 col-lg-5">
                <div class="auth-box-left">
                  <h4>Don't worry, we're here.</h4>
                  <div class="auth-box-icon">
                    <img
                      src="https://themesbox.in/admin-templates/theta/html/light-vertical/assets/images/authentication/auth-box-icon-forgot.svg"
                      class="img-fluid"
                      alt="auth-box-icon"
                    />
                  </div>
                  <div class="auth-box-logo">
                    <img
                      src="/assets/images/logos/learnr-logo.png"
                      class="img-fluid"
                      alt="logo"
                    />
                  </div>
                </div>
              </div>
              <!-- Start end -->
              <!-- Start col -->
              <div class="col-md-6 col-lg-5">
                <!-- Start Auth Box -->
                <div class="auth-box-right">
                  <% if (error && error.length) { %>
                  <div class="alert alert-danger" role="alert">
                    <%= error %>
                  </div>
                  <% } %> <% if (success && success.length) { %>
                  <div class="alert alert-success" role="alert">
                    <%= success %>
                  </div>
                  <% } %>
                  <form
                    action="/api/creator/auth/forget-password"
                    method="POST"
                  >
                    <h4 class="text-primary mb-4">Forget Password ?</h4>
                    <p class="mb-4">
                      Enter the email address below to receive reset password
                      instructions.
                    </p>
                    <div class="form-group">
                      <input
                        type="email"
                        name="email"
                        class="form-control"
                        id="email"
                        placeholder="Enter Email here"
                        required=""
                      />
                    </div>
                    <button
                      type="submit"
                      class="btn btn-success btn-lg btn-block font-18"
                    >
                      Send Email
                    </button>
                  </form>
                  <p class="mb-0 mt-3">
                    Remember Password?
                    <a href="/api/creator/auth/login"
                      >Log in <i class="fa fa-angle-double-right"></i
                    ></a>
                  </p>
                </div>
                <!-- End Auth Box -->
              </div>
              <!-- End col -->
            </div>
            <!-- End row -->
          </div>
        </div>
      </div>
    </div>
    <!-- End Container -->
  </div>
</body>
<%- include('../partials/min-footer') %>
